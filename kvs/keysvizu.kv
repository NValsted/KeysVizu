#:kivy 2.0.0

<BlackKey>:
    note: self.note

    canvas:
        Color:
            rgb: (0.1,0.1,0.1)
        Rectangle:
            size: self.width,self.height #self.parent.width/88, self.parent.height*0.8
            pos: self.pos

<WhiteKey>:
    note: self.note
    
    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            size: self.width,self.height #self.parent.width/88, self.parent.height
            pos: self.pos

<PianoNote>:
    note: self.note
    key_idx: self.key_idx
    
    canvas:
        Color:
            rgb: (0.2,0.3,0.9)
        RoundedRectangle:
            size: self.width,self.height
            pos: self.pos
            radius: 5, 5, 2.5, 2.5

<Keybed>:
    size: self.parent.width, self.parent.height*0.2
    
    #FloatLayout:
    #    size: self.width, self.height*0.25

<PianoRoll>:
    size: self.parent.width, self.parent.height

<Stage>:
    pianoroll: pianoroll
    keybed: keybed

    PianoRoll:
        id: pianoroll

    Keybed:
        id: keybed

    FloatLayout:
        size: root.width, root.height
