#:kivy 2.0.0
#:include kvs/menu.kv
#:include kvs/stage.kv
#:include kvs/timeline.kv
#:include kvs/tooltip_bar.kv

<WorkBench>:
    stage: stage
    project_timeline: project_timeline
    menu: menu
    size: root.width, root.height

    BoxLayout:
        orientation: 'horizontal'
        size: self.parent.width, self.parent.height
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1 - menu.size_hint_x
            
            Stage:
                id: stage
                size_hint_y: ((self.parent.width*9/16) / self.parent.height)

            ProjectTimeline:
                id: project_timeline
                size_hint_y: (1 - stage.size_hint_y) / 2
            
            Button:
                text: "Tooltip bar (e.g. progress bar when exporting vid and tooltips when working)"
                size_hint_y: (1 - stage.size_hint_y) / 2
                
        Menu:
            id: menu
            size_hint_x: 0.2 # Could work on making this adjustable from GUI