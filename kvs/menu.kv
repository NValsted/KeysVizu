#:kivy 2.0.0

#:include kvs/misc/custom_buttons.kv
#:include kvs/misc/browsers.kv
#:include kvs/misc/numeric_setting.kv
#:include kvs/misc/style_previews.kv
#:include kvs/misc/linked_fields.kv
#:include kvs/misc/custom_dropdowns.kv

#:include kvs/settings_tabs/settings_tab.kv
#:include kvs/settings_tabs/project_settings.kv
#:include kvs/settings_tabs/style_settings.kv
#:include kvs/settings_tabs/export_settings.kv
#:include kvs/settings_tabs/particles_settings.kv

<TabbedPanelHeader>:
    background_normal: 'UI/menu/testB.png'
    background_down: 'UI/menu/test2.png'

<Menu>:
    project_settings: project_settings
    style_settings: style_settings
    particles_settings: particles_settings
    export_settings: export_settings
    tabbed_panel: tabbed_panel

    TabbedPanel:
        id: tabbed_panel
        do_default_tab: False
        tab_pos: 'left_top'
        tab_width: self.height/len(self.tab_list)

        size: self.parent.size
        pos: self.parent.pos

        StyleSettings:
            id: style_settings

        ParticlesSettings:
            id: particles_settings

        ExportSettings:
            id: export_settings

        ProjectSettings:
            id: project_settings