#:kivy 2.0.0

<StyleSettings>
    note_style_preview: note_style_preview
    velocity_scaling_slider: velocity_scaling_slider

    active_channel: self.active_channel
    text: "Style"

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: tab_title_BoxL
            orientation: 'horizontal'
            size_hint_y: 0.05

            Label:
                text: "Style settings"
                font_size: root.tab_title_font_size

        BoxLayout:
            id: tab_content_BoxL
            orientation: 'vertical'
            size_hint_y: 1-tab_title_BoxL.size_hint_y

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 175

                NoteStylePreview:
                    id: note_style_preview
                    size_hint_x: 0.5

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            orientation: 'vertical'
                            
                            size_hint_x: None
                            width: self.height
                            
                            Label:
                                text: str(root.active_channel)
                                
                            BoxLayout:
                                orientation: 'horizontal'
                                
                                Button:
                                    text: "<"
                                    on_press: root.change_channel(-1)
                                Button:
                                    text: ">"
                                    on_press: root.change_channel(1)

                        Label:
                            text: "channel"

                    BoxLayout:
                        orientation: 'horizontal'

                        Button:
                            text: "color"
                            size_hint_x: None
                            width: self.height
                            on_press: root.load_color_wheel(root.change_white_key_color)

                        Label:
                            text: "notes"
                    
                    BoxLayout:
                        orientation: 'horizontal'

                        Button:
                            text: "color"
                            size_hint_x: None
                            width: self.height

                        Label:
                            text: "background"

            NumericSliderSetting:
                id: velocity_scaling_slider
                label_text: "Velocity scaling"
                slider_bounds: [1,3]
                step: 0.01
                callback: root.change_velocity_scaling
            
            Label:
                text: "chonk"